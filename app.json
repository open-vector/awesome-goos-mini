{
  "pages": [
    "pages/index/index",
    "pages/evaluation/evaluation",
    "pages/article/article",
    "pages/my/my",
    "pages/logs/logs"
  ],
  "window": {
    "backgroundTextStyle": "dark",
    "navigationBarBackgroundColor": "#fff",
    "navigationBarTitleText": "格林好物",
    "navigationBarTextStyle": "black",
    "enablePullDownRefresh": true,
    "backgroundColor": "#FFFFFF"
  },
  "lazyCodeLoading": "requiredComponents",
  "tabBar": {
    "backgroundColor": "#fafafa",
    "borderStyle": "white",
    "selectedColor": "#1296db",
    "color": "#707070",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/images/home.png",
        "selectedIconPath": "static/images/home@selected.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/evaluation/evaluation",
        "iconPath": "static/images/evaluation.png",
        "selectedIconPath": "static/images/evaluation@selected.png",
        "text": "好评"
      },
      {
        "pagePath": "pages/article/article",
        "iconPath": "static/images/article.png",
        "selectedIconPath": "static/images/article@selected.png",
        "text": "好文"
      },
      {
        "pagePath": "pages/my/my",
        "iconPath": "static/images/my.png",
        "selectedIconPath": "static/images/my@selected.png",
        "text": "我的"
      }
    ]
  },
  "networkTimeout": {
    "request": 10000,
    "connectSocket": 10000,
    "uploadFile": 10000,
    "downloadFile": 10000
  },
  "debug": true,
  "usingComponents": {
    "van-button": "@vant/weapp/button/index"
  },
  "style": "v2",
  "sitemapLocation": "sitemap.json",
  "permission": {
    "scope.userLocation": {
      "desc": "您的位置信息将用于设备定位用于找到离您最近的门店"
    }
  }
}
