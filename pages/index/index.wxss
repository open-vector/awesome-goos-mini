.tab-item-cus .title{
  font-size: .95rem;
  display: block;
  text-align: center;
  font-weight: bold;
}

.tab-item-cus .sub-title{
  font-size: .8rem;
  display: block;
  text-align: center;
  color: #aaa;
  line-height: 1.5rem;
}

.list-box {
  display: flex;
  flex-flow: row;
  flex-wrap: wrap;
  padding-top: 1rem;
}

.list-item-box {
  width: calc(50% - .6rem);
  flex-wrap: wrap;
  margin: 0 .3rem .5rem;
  background-color: #eee;
  border-radius: .3rem;
  overflow: hidden;
}

.item-title {
  font-size: .8rem;
  color: #333; 
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height:1.5rem;
  padding: 0 .3rem;
}
.item-tag{
  display: block;
  position: relative;
  padding-left: .2rem;
  
}

.item-price{
  line-height:2rem;
}

.van-tab{

  flex: none!important;
  padding: 0 10px !important;

}